name: Gatekeeper Main
on:
  pull_request:
    branches:
      - main # Se activa cuando alguien apunta a main

jobs:
  check-source:
    runs-on: ubuntu-latest
    steps:
      - name: Validar rama de origen
        if: github.head_ref != 'development'
        run: |
          echo "ACCESO DENEGADO: Solo se permiten merges desde 'development'."
          exit 1 # Esto hace que el check falle
